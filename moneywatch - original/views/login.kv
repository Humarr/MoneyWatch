<LoginScreen>
    Text:
        text: "Welcome Back!"
        font_size: app.fonts.size.h1
        font_name: app.fonts.heading
        pos_hint: {'x': 0.12,'center_y': 0.79}
        text_color: app.colors.secondary
    MDFloatLayout:
        md_bg_color: app.colors.secondary
        size_hint_y: .6
        radius: [40,40,0,0]
    MyTextField:
        id: email
        hint_text: "email"
        pos_hint: {'center_x': 0.5,'center_y': 0.39}
        icon_right: "email"
        input_type: "mail"
    MyTextField:
        id: password
        hint_text: "password"
        pos_hint: {'center_x': 0.5,'center_y': 0.29}
        icon_right: "lock"
        password: True
        input_type: "text"
    IconButton:
        icon: "eye"
        pos_hint: {'center_x': 0.78,'center_y': 0.29}
        on_press:
            password.password = False if password.password == True else True
            self.icon = "eye" if password.password == True else "eye-off"
    MDCheckbox:
        id: check
        size_hint: None, None
        size: dp(1), dp(1)
        # pos_hint: {'center_x': .001, 'center_y': .4}
        active: False
    RoundButton:
        id: btn
        text: "Proceed"
        text_color:app.colors.secondary
        md_bg_color: app.colors.white
        font_name: app.fonts.heading
        font_size: app.fonts.size.h3
        size_hint_y: .07
        pos_hint: {'center_x': 0.5,'center_y': 0.15}
        on_press:
            app.login_loader(email.text, password.text)
            # app.login(email.text, password.text)


            # app.change_screen("home")
    FlatButton:
        text: "[u]Recover Password[/u]"
        pos_hint: {'center_x': 0.76,'center_y': 0.05}
        text_color:app.colors.secondary
        md_bg_color: app.colors.white
        font_size: app.fonts.size.h5
        on_press: app.change_screen("forgot")
    FlatButton:
        text: "[u]Signup instead[/u]"
        pos_hint: {'center_x': 0.25,'center_y': 0.7}
        text_color:app.colors.white
        font_size: app.fonts.size.h5
        md_bg_color:app.colors.secondary
        on_press: app.change_screen("signup")

    Circle:
        md_bg_color: app.colors.orange
        size: "110dp", "110dp"
        pos_hint: {'center_x': 0.15,'center_y': 0.99}

    Circle:
        md_bg_color: app.colors.primary
        size: "130dp", "130dp"
        pos_hint: {'center_x': 0.85,'center_y': 0.99}
    Circle:
        md_bg_color: app.colors.secondary
        size: "200dp", "200dp"
        pos_hint: {'center_x': 0.5,'center_y': 0.99}
