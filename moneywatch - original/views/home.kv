<UpdateBudgetContent>
    orientation: "vertical"
    spacing: "5dp"
    size_hint_y: None
    height: "220dp"
    Text:
        text:
            "Enter youradditional budget in the space provided below." \
            " It will be added to the current value of your budget"
        font_size: app.fonts.size.h5
        font_name: app.fonts.heading
        # pos_hint: {'x':.07,'center_y': 0.69}
        text_color: app.colors.secondary
        # size_hint_x: .9
        # halign: "center"
        shorten: False
    MyTextField:
        id: new_budget
        hint_text: "New Amount"
        # hint_text_color_focus: app.colors.black
        # hint_text_color_normal: app.colors.black
        size_hint_x: .8
        mode: "line"
    RoundButton:
        text: "Proceed"
        text_color: app.colors.white
        md_bg_color:app.colors.secondary
        font_name: app.fonts.heading
        font_size: app.fonts.size.h5
        on_press:
            app.update_budget(new_budget.text)
        # size_hint_y: .07
        # pos_hint: {'center_x': 0.5,'center_y': 0.35}
        # on_press: root.save_budget(budget.text)





